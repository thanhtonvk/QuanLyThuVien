<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sách: " />

        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loại sách: " />

        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá thuê: " />

        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Năm xuất bản: " />

        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tác giả: " />

        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lượng: " />

        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả: " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:textSize="20sp"
            android:id="@+id/tv_tensach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sách: " />

        <TextView
            android:textSize="20sp"
            android:id="@+id/tv_loaisach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loại sách: " />

        <TextView
            android:textSize="20sp"
            android:id="@+id/tv_giathue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá thuê: " />

        <TextView
            android:textSize="20sp"
            android:id="@+id/tv_namxb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Năm xuất bản: " />

        <TextView
            android:textSize="20sp"
            android:id="@+id/tv_tacgia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tác giả: " />

        <TextView
            android:textSize="20sp"
            android:id="@+id/tv_soluong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số lượng: " />

        <TextView
            android:textSize="20sp"
            android:id="@+id/tv_mota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả: " />
    </LinearLayout>
</LinearLayout>